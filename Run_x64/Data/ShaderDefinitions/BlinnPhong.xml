<?xml version="1.0" encoding="utf-8"?>

<Shader name="BlinnPhong">
  <DefaultConstantBuffers>
    <ConstantBuffer name="ViewProjection3D"     bindPoint="0" />
    <ConstantBuffer name="Model3D"              bindPoint="1" />
  </DefaultConstantBuffers>
  <VertexShader>
  </VertexShader>
  <FragmentShader>
    <ConstantBuffer name="Light" size="64">
      <Uniform name="color"             type="rgba"  />
      <Uniform name="minLightDistance"  type="float" />
      <Uniform name="maxLightDistance"  type="float" />
      <Uniform name="powerAtMin"        type="float" />
      <Uniform name="powerAtMax"        type="float" />
      <Uniform name="position"          type="vec3"  />
      <Uniform name="CameraPos"         type="vec3"  />
    </ConstantBuffer>
    <ShaderResourceView   texturePath="Data/Textures/Brick.png"           bindPoint="0"   default="null" />
    <ShaderResourceView   texturePath="Data/Textures/Brick_normal.png"    bindPoint="1"   default="null" />
    <Sampler  type="linear" />
  </FragmentShader>
</Shader>